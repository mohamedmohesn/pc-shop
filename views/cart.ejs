<%- include('partials/header'); -%>
<style>
    body{
        background: #ffffff;
  }
</style>
<a href="clearcart" class="btn btn-primary" style="position: fixed; right: 5px;top: 90px;">clearcart</a>
<% if (cart === null || cart.products.length == 0) {%>
    <h2>No item in shopping Cart</h2>
    <%} else {%>
        <h2>Shopping Cart Detail</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < cart.products.length; i++){
                    let product = cart.products[i];  
                %>
                    <tr>
                        <th scope="row">
                            <%= i+1%>
                        </th>
                        <td>
                            <%= product.name%>
                        </td>
                        <td>
                            <%= product.price%>
                        </td>
                        <td>
                            <%= product.qty%>
                        </td>
                        <td><form action="/delete-cart/<%= product._id %>" method="post">
                            <button class="cart btn btn-primary" type="submit" style="display: inline;">Delete</button>
                            </form>
                        </td>
                    </tr>
                   
                    <%}%>
                        <tr>
                            <td>Total Price: </td>
                            <td colspan="2">
                                <%= cart.totalPrice%>
                            </td>
                            <td>Total Quantity: </td>
                            <td colspan="1">
                                <%= cart.totalqty%>
                            </td>
                        </tr>
            </tbody>
        </table>
        <a href="/order-place" class="btn btn-primary">place order</a>
       
        <%}%>
       

        <%- include('partials/footer'); -%>

